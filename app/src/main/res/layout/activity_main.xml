<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/challenge_list_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/btn_category"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_menu"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/title_challenge_detail_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="용기를 담아"
            android:textAlignment="center"
            android:textSize="25dp"
            android:layout_marginRight="60dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/challenge_list_top"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="용기를 담아"
            android:textSize="35sp"
            android:textColor="#85DC40"
            android:paddingLeft="20dp"/>
        
        <ImageView
            android:layout_marginTop="30dp"
            android:id="@+id/app_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher_background"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/app_exp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@mipmap/main_exp"
            android:paddingLeft="20dp" />

        
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>