<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/register_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textAlignment="center"
        android:textSize="20sp"
        android:paddingTop="20dp"/>

    <LinearLayout
        android:id="@+id/email_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="60dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:paddingLeft="30dp"
            android:textSize="18sp"/>


        <EditText
            android:id="@+id/user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="120dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="비밀번호 "
            android:paddingLeft="30dp"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/user_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:inputType="textPassword"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="180dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="비밀번호 확인"
            android:paddingLeft="30dp"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/user_passwordcheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:inputType="textPassword"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="240dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="이름"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="300dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="전화번호"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/user_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="어디에 해당되시는지 선택해 주세요."
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:paddingTop="20dp"
        android:textColor="#1b9ce5"/>

    <LinearLayout
        android:id="@+id/sort_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="400dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">



        <RadioGroup
            android:id="@+id/user_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/normaluser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일반 유저" />

            <RadioButton
                android:id="@+id/rest_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소상공인" />

        </RadioGroup>

    </LinearLayout>


    <Button
        android:id="@+id/btn_register"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="회원가입"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sort_user" />




</androidx.constraintlayout.widget.ConstraintLayout>