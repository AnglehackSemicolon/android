<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/challenge_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/btn_category"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_menu"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/title_challenge_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="도전과제 완료하기"
            android:textAlignment="center"
            android:textSize="25dp"
            android:layout_marginRight="60dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/challenge_exp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="도전과제를 완료하시려면 사진이나 동영상을\n예시 이미지처럼 올려주세요."
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/challenge_start"
        tools:layout_editor_absoluteX="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/challenge_exp"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/upload_challenge"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/ic_launcher_background" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제출하기"
            android:layout_marginTop="15dp"/>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>