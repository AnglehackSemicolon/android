<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".ChallengeStartActivity">

    <LinearLayout
        android:id="@+id/challenge_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/btn_category"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_menu"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/title_challenge_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="도전과제 완료하기"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_marginRight="60dp"
            android:paddingTop="13dp"
            android:fontFamily="@font/nanumsquarebold"/>

    </LinearLayout>

    <TextView
        android:id="@+id/challenge_exp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="도전과제를 완료하시려면 사진이나 동영상을\n예시 이미지처럼 올려주세요."
        android:textAlignment="center"
        android:layout_marginTop="70dp" />

    <LinearLayout
        android:id="@+id/sample_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="120dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="도전과제 이름"
            android:textSize="25sp"
            android:textAlignment="center"/>

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/sample_img_check"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@mipmap/sample_challenge_img" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="380dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="----------------------------------------------------------"
            android:textAlignment="center"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="나의 사진"
            android:textSize="25sp"
            android:textAlignment="center"/>

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/user_upload_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@mipmap/sample_challenge_img" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btn_upload"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="제출하기"
                android:fontFamily="@font/nanumsquareregular"
                android:background="#77c78c"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:onClick="mOnPopupClick"/>


        </LinearLayout>


    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />


</androidx.drawerlayout.widget.DrawerLayout>