<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#eeeeee"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <!-- 타이틀바 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="도전과제 성공"
            android:textSize="20sp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="#fd6262"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:fontFamily="@font/nanumsquareregular"/>
    </LinearLayout>
    <!-- //end 타이틀바 -->

    <!-- Notice -->
    <LinearLayout
        android:padding="24dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/challenge_success_exp"
            android:text="도전과제를 성공하지 못했군요!"
            android:fontFamily="@font/nanumsquareregular"
            android:textSize="15sp"
            android:textColor="#000"
            android:alpha="0.87"
            android:gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/challenge_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+1 포인트"
            android:textSize="21sp"
            android:textAlignment="center"
            android:textColor="#2ba425"
            android:fontFamily="@font/nanumsquareextrabold"/>


    </LinearLayout>
    <!-- Notice -->

    <View
        android:background="#66bdbdbd"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <!-- 이 버튼 -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="확인"
            android:textSize="12sp"
            android:textColor="#fd6262"
            android:padding="16dp"
            android:gravity="center"
            android:background="#00000000"
            android:layout_width="150dp"
            android:layout_height="53dp"
            android:onClick="mOnClose"
            android:fontFamily="@font/nanumsquarebold"/>

    </LinearLayout>
    <!--//이동 버튼 -->
</LinearLayout>
